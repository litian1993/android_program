<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
<ImageView
    android:id="@+id/fourth_fragment_header"
    android:layout_width="match_parent"
    android:src="@drawable/person_bg_unlogin"
    android:scaleType="fitXY"
    android:layout_height="180dp" />
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/fourth_fragment_logo"
    app:civ_border_width="3dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="140dp"
    app:civ_border_color="#ffffff"
    android:src="@drawable/pic2"
    android:layout_width="80dp"
    android:layout_height="80dp" />
    <TextView
        android:id="@+id/fourth_fragment_myinterst"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/ic_person_interest"
        android:layout_below="@+id/fourth_fragment_logo"
        android:text="兴趣标签"
        android:layout_marginTop="30dp"
        android:gravity="bottom|center_horizontal"
        android:layout_width="80dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/fourth_fragment_line1"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/fourth_fragment_logo"
        android:layout_toLeftOf="@id/fourth_fragment_myinterst"
        android:background="#EDEAE8"
        android:layout_width="1.5dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/fourth_fragment_myorder"
        android:drawableTop="@drawable/ic_person_order"
        android:layout_below="@+id/fourth_fragment_logo"
        android:layout_toLeftOf="@+id/fourth_fragment_myinterst"
        android:layout_marginRight="40dp"
        android:text="我预定的"
        android:layout_marginTop="30dp"
        android:gravity="bottom|center_horizontal"
        android:layout_width="80dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/fourth_fragment_line2"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/fourth_fragment_logo"
        android:layout_toRightOf="@id/fourth_fragment_myinterst"
        android:background="#EDEAE8"
        android:layout_width="1.5dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/fourth_fragment_setting"
        android:drawableTop="@drawable/ic_person_order"
        android:layout_below="@+id/fourth_fragment_logo"
        android:layout_toRightOf="@+id/fourth_fragment_line2"
        android:layout_marginLeft="20dp"
        android:text="我预定的"
        android:layout_marginTop="30dp"
        android:gravity="bottom|center_horizontal"
        android:layout_width="80dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/fourth_fragment_line3"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/fourth_fragment_myinterst"
        android:layout_width="2dp"
        android:layout_marginTop="30dp"
        android:background="#000000"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fourth_fragment_textshow"
        android:layout_marginTop="30dp"
        android:layout_below="@id/fourth_fragment_myinterst"
        android:layout_toRightOf="@id/fourth_fragment_line3"
       android:layout_alignBottom="@id/fourth_fragment_line3"
        android:text="我收藏的活动"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fourth_fragment_line4"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/fourth_fragment_textshow"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="#EDEAE8"
        android:layout_height="1dp" />
    <GridView
        android:id="@+id/fourth_fragment_loveGrid"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:numColumns="2"
        android:layout_below="@id/fourth_fragment_line4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></GridView>

</RelativeLayout>