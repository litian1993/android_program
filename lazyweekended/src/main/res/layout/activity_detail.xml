<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phone1000.lazyweekended.ui.DetailActivity">
    <RelativeLayout
        android:id="@+id/detail_item_title"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <Button
            android:id="@+id/detail_item_back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_nav_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
             />
    <TextView
        android:id="@+id/detail_item_name"
        android:layout_centerInParent="true"
        android:text="全部活动"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>
<ListView
    android:id="@+id/detailt_activity_lv"
    android:layout_below="@+id/detail_item_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></ListView>
</RelativeLayout>
