<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    tools:context="com.phone1000.lazyweekended.ui.CityDetailActivity">
<TextView
    android:id="@+id/city_detail_locatecity"
    android:layout_marginTop="15dp"
    android:text="当前所在的城市"
    android:textSize="16sp"
    android:layout_marginLeft="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <Button
        android:id="@+id/city_detail_locatebtn"
        android:background="@drawable/city_btn_shape"
        android:layout_alignBaseline="@+id/city_detail_locatecity"
        android:layout_alignParentRight="true"
        android:text="武汉"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/city_detail_recentcity"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最近浏览"
        android:textSize="16sp"
        android:layout_below="@id/city_detail_locatebtn"
        />
    <GridView
        android:id="@+id/city_detail_recentcitylist"
        android:layout_below="@+id/city_detail_recentcity"
        android:layout_marginTop="20dp"
        android:numColumns="3"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </GridView>
    <TextView
        android:id="@+id/city_detail_hotcity"
        android:layout_below="@+id/city_detail_recentcitylist"
        android:text="热门城市"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <GridView
        android:id="@+id/city_detail_hotcitylist"
        android:layout_below="@id/city_detail_hotcity"
        android:layout_marginTop="20dp"
        android:numColumns="3"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"  />
</RelativeLayout>
