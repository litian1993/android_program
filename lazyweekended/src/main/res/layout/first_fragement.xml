<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<TextView
    android:id="@+id/first_fragment_title"
    android:layout_width="match_parent"
    android:text="懒人周末"
    android:gravity="center"
    android:textSize="20sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="?actionBarSize" />
    <TextView
        android:id="@+id/first_fragment_dividline"
        android:layout_below="@+id/first_fragment_title"
        android:background="#EDEAE8"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <ListView
        android:id="@+id/first_fragment_listview"
        android:layout_below="@+id/first_fragment_dividline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</RelativeLayout>