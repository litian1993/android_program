<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/search_list_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        />
    <Button
        android:id="@+id/search_list_back"
        android:background="@drawable/back"
        android:layout_width="20dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_height="20dp" />
    <EditText
        android:id="@+id/search_list_input"
        android:layout_width="150dp"
        android:background="@drawable/search_shape"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_height="30dp" />
    <Button
        android:id="@+id/search_list_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dlbtn_selector"
        android:layout_alignParentRight="true"
        android:text="搜索"
        android:layout_marginRight="10dp"
        android:gravity="right|center_vertical"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/search_list_background"
        />
<ListView
    android:layout_below="@+id/search_list_background"
    android:id="@+id/search_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</RelativeLayout>