<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/weekdetail_header_backgroud"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/lb_bg"
        android:layout_marginBottom="10dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_cicle_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/detail_foot_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/weekdetail_header_backgroud"
            android:background="#45afafaf" />

            <TextView
                android:id="@+id/detail_add_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_alignTop="@+id/detail_foot_tv"
                android:layout_alignBottom="@+id/detail_foot_tv"
                android:text="添加时间：2016—08-12" />

            <TextView
                android:id="@+id/detail_show_left"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/detail_foot_tv"
                android:layout_alignBottom="@+id/detail_foot_tv"
                android:layout_toLeftOf="@+id/detail_left_number"
                android:gravity="center_vertical"
                android:text="礼包剩余" />
            <TextView
                android:id="@+id/detail_left_number"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:text="200"
                android:layout_alignTop="@+id/detail_foot_tv"
                android:layout_alignBottom="@+id/detail_foot_tv"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


    <TextView
        android:id="@+id/detail_show_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_below="@id/weekdetail_header_backgroud"
        android:text="礼包说明"
        android:gravity="center"

        />
    <TextView
        android:id="@+id/detail_divide_line"
        android:layout_below="@id/detail_show_simple"
        android:layout_alignLeft="@id/detail_show_simple"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@id/detail_show_simple"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#00ff00"
        />
   <TextView
       android:id="@+id/detail_show_explain"
       android:layout_alignLeft="@id/detail_show_simple"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="60dp"
       android:layout_below="@id/detail_divide_line"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text=""
       />
    <TextView
        android:id="@+id/detail_show_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_below="@id/detail_show_explain"
        android:text="兑换方式"
        android:gravity="center"

        />
    <TextView
        android:id="@+id/detail_divide_line2"
        android:layout_below="@id/detail_show_method"
        android:layout_alignLeft="@id/detail_show_simple"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@id/detail_show_simple"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#00ff00"
        />
    <TextView
        android:id="@+id/detail_show_exchangemethod"
        android:layout_alignLeft="@id/detail_show_explain"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/detail_divide_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        />
    <TextView
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/detail_get"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/detail_get"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="立即领取"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:id="@+id/detail_login"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/my_gift_green"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/detail_get"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"

        />
</RelativeLayout>