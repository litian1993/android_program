<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<ImageView
    android:id="@+id/hotspot_grid_image"
    android:layout_width="70dp"
    android:layout_marginTop="10dp"
    android:src="@drawable/def_loading"
    android:scaleType="fitXY"
    android:layout_height="70dp" />
    <TextView
        android:id="@+id/hotspot_grid_name"
        android:layout_below="@+id/hotspot_grid_image"
        android:layout_alignLeft="@+id/hotspot_grid_image"
        android:layout_alignRight="@+id/hotspot_grid_image"
        android:layout_width="wrap_content"
        android:text="游戏名称"
        android:singleLine="true"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />

</RelativeLayout>