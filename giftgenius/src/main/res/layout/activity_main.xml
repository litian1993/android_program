<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phone1000.giftgenius.MainActivity">
<android.support.v4.widget.DrawerLayout
    android:id="@+id/main_draw"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:id="@+id/main_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/main_show_fragent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_divide_line"
        />
    <TextView
        android:id="@+id/tv_divide_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"
        android:layout_above="@+id/radio_group_ll"
        />
    <RadioGroup
        android:id="@+id/radio_group_ll"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        >
        <RadioButton
            android:id="@+id/radio_btn_libao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:drawableBottom="@drawable/libao_selector"
            android:button="@null"

            />
        <RadioButton
            android:id="@+id/radio_btn_kaifu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:drawableBottom="@drawable/kaifu_selector"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/radio_btn_remen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:drawableBottom="@drawable/remen_selector"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/radio_btn_tese"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableBottom="@drawable/tese_selector"
            android:button="@null"
            />
    </RadioGroup>
</RelativeLayout>
<RelativeLayout
    android:id="@+id/draw_left"
    android:layout_gravity="left"
    android:background="@drawable/menu_background"
    android:layout_width="300dp"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_logo"
        android:src="@drawable/def_loading"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="请登录"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/main_logo"/>
    <Button
        android:id="@+id/main_page"
        android:drawableLeft="@drawable/icon_home"
        android:text="主页"
        android:layout_below="@+id/main_logo"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:gravity="center"
        android:background="#00ffffff"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/main_mypackage"
        android:layout_below="@+id/main_page"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/my_gift"
        android:text="我的礼包"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#00ffffff"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/main_sendemail"
        android:layout_below="@+id/main_mypackage"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/send_email"
        android:text="提个建议"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#00ffffff"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/main_aboutus"
        android:layout_below="@+id/main_sendemail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/about_me"
        android:text="关于我们"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="15sp"
        android:background="#00ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
</android.support.v4.widget.DrawerLayout>
</RelativeLayout>
