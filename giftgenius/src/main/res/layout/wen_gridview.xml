<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<ImageView
    android:id="@+id/wen_grid_image"
    android:layout_width="60dp"
    android:src="@drawable/def_loading"
    android:scaleType="fitXY"
    android:layout_height="60dp" />
    <TextView
        android:id="@+id/wen_grid_name"
        android:layout_below="@+id/wen_grid_image"
        android:layout_alignLeft="@+id/wen_grid_image"
        android:layout_alignRight="@+id/wen_grid_image"
        android:layout_width="wrap_content"
        android:text="游戏名称"
        android:singleLine="true"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/wen_grid_download"
        android:background="@drawable/dlbtn_selector"
        android:layout_below="@+id/wen_grid_name"
        android:text="下载"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_alignLeft="@+id/wen_grid_name"
        android:layout_alignRight="@+id/wen_grid_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content" />
</RelativeLayout>