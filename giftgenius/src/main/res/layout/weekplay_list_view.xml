<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/weekplay_list_divideline"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
<ImageView
    android:id="@+id/weekplay_list_image"
    android:layout_below="@+id/weekplay_list_divideline"
    android:layout_width="match_parent"
    android:background="@drawable/def_loading"
    android:scaleType="fitXY"
    android:layout_height="250dp" />
    <RelativeLayout
        android:layout_alignBottom="@+id/weekplay_list_image"
        android:layout_alignLeft="@+id/weekplay_list_image"
        android:layout_alignRight="@+id/weekplay_list_image"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#67aeaeae"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/weekplay_list_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="国奥加油"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/weekplay_list_icon"
            android:src="@drawable/def_loading"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <TextView
        android:layout_below="@id/weekplay_list_image"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
</RelativeLayout>